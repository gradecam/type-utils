{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": false,
        "inlineSourceMap": true,
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "strictNullChecks": true,
        "target": "es2017"
    },
    "include": [
        "src/**/*"
    ]
}
